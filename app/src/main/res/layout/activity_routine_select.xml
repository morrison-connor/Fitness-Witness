<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WS_ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ExerciseYellow"
    tools:context=".RoutineSelect">

    <LinearLayout
        android:id="@+id/WS_LinearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/RS_R1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/advent_pro_bold"
            android:gravity="center"
            android:text="Workout Routine 1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/RS_R2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/advent_pro_bold"
            android:gravity="center"
            android:text="Workout Routine 2"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/RS_R3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/advent_pro_bold"
            android:gravity="center"
            android:text="Workout Routine 3"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/WS_BackTV"
            android:text="Back"
            android:fontFamily="@font/advent_pro_bold"
            android:textColor="#000000"
            android:textSize="48sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>